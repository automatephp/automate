{% extends '_base.html.twig' %}

{% block nav %}
    <div class="c-baseline">
        <div class="c-baseline__inner c-baseline__inner-front">
            <h2 id="c-baseline-title-1" class="c-baseline__title">One command line !</h2>
            <p class="c-baseline__description">Automate allows you to automate your deployments to remote Linux servers
                simply. You can use Automate from your workstation or through an integration server like Github or
                Gitlab-ci.</p>
            <button type="button" class="c-baseline__button c-button c-button--plain c-button--orange">Discover !
            </button>
        </div>
        <div class="c-baseline__inner c-baseline__inner-back">
            <h2 id="c-baseline-title-2" class="c-baseline__title">One YAML file to organize everything</h2>
            <p class="c-baseline__description">Define all linux environment you need and all command line on each to
                deploy your application simply from the repository Git.</p>
            <a href="#section-advantages" type="button" class="c-button c-button--plain c-button--orange">Features
            </a>
        </div>
    </div>
{% endblock %}

{% block flipCard %}
    <div class="c-flip-card">
        <div class="c-flip-card__inner">
            <div class="c-flip-card__face c-flip-card__face--front">
                <div class="c-flip-card__ellipsis"></div>
                <div id="demo"></div>
            </div>
            <div class="c-flip-card__face c-flip-card__face--back">
                <div class="c-flip-card__ellipsis"></div>
                <pre class="c-flip-card__pre"><code class="c-flip-card__code"></code></pre>
            </div>
        </div>
    </div>
{% endblock %}

 {% block content %}
     <section id="section-advantages" class="c-advantages">
         <div class="o-container">
             <div class="c-advantages__inner">
